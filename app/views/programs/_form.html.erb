<%= render 'shared/errors', obj: @program %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@program, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :start_weight %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :start_weight, class: "form-control", placeholder: "Starting wieght", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :water_goal %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :water_goal, class: "form-control", placeholder: "Usually half your weight" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :green_limit %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :green_limit, class: "form-control", placeholder: "Green container limit"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :purple_limit %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :purple_limit, class: "form-control", placeholder: "Purple container limt" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :red_limit %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :red_limit, class: "form-control", placeholder: "Red container limit" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :yellow_limit %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :yellow_limit, class: "form-control", placeholder: "Yellow container limit" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :blue_limit%>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :blue_limit, class: "form-control", placeholder: "Blue container limit" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :orange_limit %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :orange_limit, class: "form-control", placeholder: "Orange container limit" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :tbsp_limit %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :tbsp_limit, class: "form-control", placeholder: "Tablespoon limit" %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-md' %>
        </div>
      </div>
    <% end %>
    <div align="center">
      [ <%= link_to 'Return to programs list', programs_path %> ]
    </div>
</div>
</div>