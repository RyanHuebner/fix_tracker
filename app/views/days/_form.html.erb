
  
  <%= render 'shared/errors', obj: @day %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for([@day.program, @day], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :weight %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :weight, class: "form-control", placeholder: "Today's wieght", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :workout %>
        </div>
        <div class='col-sm-10'>
          <%= f.select :workout, options_for_select(@workouts.collect {|s| [s[0].humanize,
            s[0]]}, selected: @day.workout), {}, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :water_consumed %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :water_consumed, class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :green_used %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :green_used, class: "form-control", placeholder: "Green containers used", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :purple_used %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :purple_used, class: "form-control", placeholder: "Purple containers used", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :red_used %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :red_used, class: "form-control", placeholder: "Red containers used", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :yellow_used %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :yellow_used, class: "form-control", placeholder: "Yellow containers used", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :blue_used %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :blue_used, class: "form-control", placeholder: "Blue containers used", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :orange_used %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :orange_used, class: "form-control", placeholder: "Orange containers used", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :tbsp_used %>
        </div>
        <div class='col-sm-10'>
          <%= f.number_field :tbsp_used, class: "form-control", placeholder: "Tablespoos used", autofocus: true %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-md' %>
        </div>
      </div>
    <% end %>
    <div align="center">
      [ <%= link_to 'Return to current day', [@day.program, @day] %> ]
    </div>
</div>
</div>
